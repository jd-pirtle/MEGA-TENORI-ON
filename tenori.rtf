// simple sin for tenori-on
(
SynthDef(\tenori, {| freq, tone |
	var dur = 0.1, amp = 0.5, source, saw, blip, attTime = (0.1*dur), relTime = (0.1*dur), env, envgen;
	env = Env([0, amp, amp, 0], [attTime, dur-(attTime+relTime), relTime], 1);
    envgen = EnvGen.kr(env, doneAction: 2);
	blip = Blip.ar(freq, tone);
	 
	source = blip;
	Out.ar(0, [source*envgen, source*envgen]);     
}).add;
)
